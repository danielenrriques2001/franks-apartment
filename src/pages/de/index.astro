---
import Layout from "../../layout/Layout.astro";
import Description from "../../layout/Description.astro";
import Hero from '../../components/Hero'
import { getLangFromUrl, useTranslations } from '../../utils/functions';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);


---

	<Layout pageTitle = {'Prenzlauer Berg'}>
		<main>
			<Hero 
				client:load
				content={t('hero')}
			/>
			<Description 
				content = {t('description')}
			/>
			
		</main>
	</Layout>