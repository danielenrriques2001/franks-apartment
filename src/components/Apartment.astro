---
import Styles from  '../styles/apartment.module.css'
const { name, description, images } = Astro.props

---
<div class={Styles["room__container"]}>

    
    <h2 class={Styles['apartment__name']}>{name}</h2>
    <p set:html={description}></p>
    <div class={Styles["room__container--images"]}>

        {
            images.map((item) => (
            <div class={Styles["images__container"]} >
                <img loading="lazy" src={item} alt="wohnraum foto">
            </div>
            ))
        }
    </div>
</div>